{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Example of a simple GeoJSON Feature specialisation",
  "$defs": {
    "MyFeature": {
      "allOf": [
        {
          "$ref": "https://opengeospatial.github.io/bblocks/annotated-schemas/geo/features/feature/schema.json"
        },
        {
          "properties": {
            "properties": {
              "$ref": "https://raw.githubusercontent.com/rob-metalinkage/prov-schema-options/undefined/build/annotated/bbr/template/mySchema/schema.json"
            }
          }
        }
      ]
    }
  },
  "anyOf": [
    {
      "$ref": "#/$defs/MyFeature"
    }
  ]
}